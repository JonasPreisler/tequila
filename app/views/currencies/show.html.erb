<% for x in @show_currency %>
	<% if @currency.symbol.upcase == x["symbol"] %>
		<% currency_price = x["price_usd"] %>
		<% currency_name = x["name"] %>
		<% currency_rank = x["rank"] %>
	<% end %>
<% end %>

<div class="panel panel-default container-3">
  <div class="panel-heading">
    <h3 class="panel-title">Your <%= currency_name %>
</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">

		<p>
		  <strong>Currency:</strong>
		  <%= @currency.symbol.upcase %>
		</p>

		<p>
		  <strong>Invested at:</strong>
			$<%= currency_price = x["price_usd"] %>
		</p>
		<p>
		  <strong>Rank:</strong>
			<%= currency_rank %>
		</p>

		<p>
		  <strong>In your portfolio:</strong>
		  <%= @currency.amount_owned %> <%= @currency.symbol.upcase %>
		</p>


    </div>
  </div>
  <div class="panel-footer">
	<%= link_to 'Edit', edit_currency_path(@currency) %> |
	<%= link_to 'Delete', currency_path(@currency), method: :delete, data: { confirm: 'Are you sure?' } %> |
	<%= link_to 'Back', currencies_path %>
  </div>
</div>